<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>maven-plugins</artifactId>
        <groupId>org.fluidity.maven</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.fluidity.maven</groupId>
    <artifactId>maven-composition-plugin-test</artifactId>
    <version>1.0-SNAPSHOT</version>

    <!-- we configure the build cycle ourselves: see the build/plugins section -->
    <packaging>pom</packaging>

    <name>Plugins: Composition Test</name>

    <dependencies>

        <dependency>
            <groupId>org.fluidity.export</groupId>
            <artifactId>fluidity-api</artifactId>
            <version>${fluidity.version}</version>
            <type>pom</type>
        </dependency>

        <dependency>
            <groupId>org.fluidity.export</groupId>
            <artifactId>fluidity-tests</artifactId>
            <version>${fluidity.version}</version>
            <type>pom</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.fluidity.export</groupId>
            <artifactId>fluidity-bootstrap</artifactId>
            <version>${fluidity.version}</version>
            <type>pom</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.fluidity.export</groupId>
            <artifactId>fluidity-cli-deployment</artifactId>
            <version>${fluidity.version}</version>
            <type>pom</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.fluidity.export</groupId>
            <artifactId>fluidity-logging-slf4j-impl</artifactId>
            <version>${fluidity.version}</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>org.fluidity.maven</groupId>
                <artifactId>maven-composition-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>process-annotations</goal>
                            <goal>process-test-annotations</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>default-compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-install</id>
                        <phase>none</phase> <!-- don't install the artifact -->
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-deploy</id>
                        <phase>none</phase> <!-- don't install the artifact -->
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

</project>
