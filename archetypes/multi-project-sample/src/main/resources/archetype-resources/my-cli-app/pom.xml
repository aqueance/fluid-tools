<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>
    <packaging>jar</packaging>

    <name>My Command Line Application</name>

#set( $symbol_dollar = '$' )
    <dependencies>

        <dependency>
            <groupId>myproject</groupId>
            <artifactId>my-impl</artifactId>
            <version>${symbol_dollar}{project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.fluidity.public</groupId>
            <artifactId>fluid-tools-cli-application</artifactId>
            <version>${symbol_dollar}{fluid.tools.version}</version>
            <type>pom</type>
        </dependency>

        <dependency>
            <groupId>org.fluidity.public</groupId>
            <artifactId>fluid-tools-commons-logging</artifactId>
            <version>${symbol_dollar}{fluid.tools.version}</version>
        </dependency>

        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>org.fluidity.maven</groupId>
                <artifactId>maven-composition-plugin</artifactId>
                <version>${fluid.tools.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>process-annotations</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <manifest>

                            <!-- Use can use your own main class of course, unless you want component deployment -->
                            <mainClass>org.fluidity.deployment.cli.CommandLineBootstrap</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.fluidity.maven</groupId>
                <artifactId>maven-standalone-jar-plugin</artifactId>
                <version>${symbol_dollar}{fluid.tools.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>

                    <dependency>
                        <groupId>org.fluidity.public</groupId>
                        <artifactId>fluid-tools-cli-manifest</artifactId>
                        <version>${symbol_dollar}{fluid.tools.version}</version>
                    </dependency>

                </dependencies>
            </plugin>

        </plugins>
    </build>
</project>
