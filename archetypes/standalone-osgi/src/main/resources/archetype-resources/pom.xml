<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>\${groupId}</groupId>
    <artifactId>\${artifactId}</artifactId>
    <version>\${version}</version>
    <packaging>jar</packaging>

    <name>\${projectName}</name>

    #set( $symbol_dollar = '$' )
    <dependencies>

        <!--
        Add dependencies for your bundles, e.g.:

        <dependency>
            <groupId>\${project.groupId}</groupId>
            <artifactId>my-osgi-bundle</artifactId>
            <version>\${project.version}</version>
            <classifier>bundle</classifier>
            <scope>runtime</scope>

            <exclusions>
                <exclusion>
                    <groupId>${fluidity.deployment.groupId}</groupId>
                    <artifactId>osgi-bundle-bootstrap</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>${fluidity.public.groupId}</groupId>
                    <artifactId>fluid-tools-osgi-bundle</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        -->

        <dependency>
            <groupId>${fluidity.public.groupId}</groupId>
            <artifactId>fluid-tools-cli-application</artifactId>
            <version>${symbol_dollar}{fluid.tools.version}</version>
            <type>pom</type>
        </dependency>

        <dependency>
            <groupId>${fluidity.deployment.groupId}</groupId>
            <artifactId>osgi-application-bootstrap</artifactId>
            <version>${symbol_dollar}{fluid.tools.version}</version>
        </dependency>

        <dependency>
            <!--
            Manual download from http://download.eclipse.org/equinox/
            Empty POM will suffice.

            Equinox versions earlier than 3.7 cannot be embedded.
            -->
            <groupId>org.eclipse</groupId>
            <artifactId>equinox</artifactId>
            <version>3.7.2</version>
        </dependency>

        <dependency>
            <groupId>${fluidity.features.groupId}</groupId>
            <artifactId>logging-commons-impl</artifactId>
            <version>${symbol_dollar}{fluid.tools.version}</version>
        </dependency>

        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>

    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>

            <plugin>
                <groupId>${fluidity.plugin.groupId}</groupId>
                <artifactId>composition-maven-plugin</artifactId>
                <version>${symbol_dollar}{fluid.tools.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>process-annotations</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>org.fluidity.deployment.launcher.OsgiApplicationBootstrap</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>${fluidity.plugin.groupId}</groupId>
                <artifactId>standalone-jar-maven-plugin</artifactId>
                <version>${symbol_dollar}{fluid.tools.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>

                <dependencies>
                    <dependency>
                        <groupId>${fluidity.features.groupId}</groupId>
                        <artifactId>jar-manifest-command-launcher-impl</artifactId>
                        <version>${symbol_dollar}{fluid.tools.version}</version>
                    </dependency>
                </dependencies>
            </plugin>

        </plugins>
    </build>
</project>
