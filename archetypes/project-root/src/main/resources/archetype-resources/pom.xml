<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>
    <packaging>pom</packaging>

    <name>${projectName}</name>

    <prerequisites>
        <maven>2.0.9</maven>
    </prerequisites>

    <properties>
        <fluidity-version>1.0-SNAPSHOT</fluidity-version>
    </properties>

    <distributionManagement>
        <repository>
            <id>dummy</id>
            <name>Dummy</name>
            <url>dummy</url>
        </repository>
    </distributionManagement>

#set( $symbol_dollar = '$' )
    <dependencyManagement>
        <dependencies>

            <!-- fluid tools -->
            <dependency>
                <groupId>org.fluidity.export</groupId>
                <artifactId>project</artifactId>
                <version>${symbol_dollar}{fluidity-version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <defaultGoal>package</defaultGoal>

        <pluginManagement>
            <plugins>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>

                    <configuration>
                        <source>1.5</source>
                        <target>1.5</target>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <useFile>false</useFile>
                    </configuration>
                </plugin>

            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>clean</id>

            <build>
                <defaultGoal>clean</defaultGoal>

                <plugins>
                    <plugin>
                        <groupId>org.fluidity.maven</groupId>
                        <artifactId>maven-repo-clean-plugin</artifactId>
                        <version>${symbol_dollar}{fluidity-version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                            </execution>
                        </executions>

                        <configuration>
                            <allVersions>true</allVersions>
                        </configuration>
                    </plugin>
                </plugins>

            </build>
        </profile>
    </profiles>
</project>
